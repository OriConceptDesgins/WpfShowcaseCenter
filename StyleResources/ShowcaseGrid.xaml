<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ColorTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>
        <Style x:Key="ShowcaseGrid" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="{StaticResource BackgroundColor}"/>
                        <GradientStop Color="{StaticResource AccentColor}" Offset="3"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ShowcaseGridDark" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="{StaticResource PrimaryColor}"/>
                        <GradientStop Color="{StaticResource AccentColor}" Offset="3"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
</ResourceDictionary>