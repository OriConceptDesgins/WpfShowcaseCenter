<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Padding" Value="10,5" />
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border BorderBrush="DarkGray" BorderThickness="0,0,0,1">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="PriorityTemplate">
        <TextBlock Text="{Binding Priority}" Margin="5" Width="50"/>
    </DataTemplate>

    <DataTemplate x:Key="DescriptionTemplate">
        <TextBlock Text="{Binding Description}" Margin="5"  />
    </DataTemplate>

    <DataTemplate x:Key="DeadlineTemplate">
        <TextBlock Text="{Binding Deadline}" Margin="5" />
    </DataTemplate>

    <DataTemplate x:Key="CompletedTemplate">
        <TextBlock Text="{Binding IsCompleted}" Margin="5" />
    </DataTemplate>
    
</ResourceDictionary>