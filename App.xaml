<Application x:Class="WpfShowcaseCenter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfShowcaseCenter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./StyleResources/ColorTheme.xaml"/>
                <ResourceDictionary Source="./StyleResources/ShowcaseButton.xaml"/>
                <ResourceDictionary Source="./StyleResources/ShowcaseGrid.xaml"/>
                <ResourceDictionary Source="./StyleResources/ShowcaseIcons.xaml"/>
                <ResourceDictionary Source="./StyleResources/ShowcaseText.xaml"/>
                <ResourceDictionary Source="./StyleResources/ToDoListView.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
